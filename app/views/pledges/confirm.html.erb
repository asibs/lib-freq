<% if !@campaign || (@new_songs.empty? && @existing_songs.empty?) %>
  <h1>Oops, something went wrong...</h1>
<% else %>
  <h1><strong><em><%= "Pledges for #{@campaign.name} confirmed!" %></em></strong></h1>

  <% if !@new_songs.empty? %>

    <h2>You have successfully pledged to buy the following songs:</h2>
    <%= render partial: "shared/song_list", object: @new_songs, locals: {
      campaign: @campaign, render_form: false, render_pledge_phase_links: false, render_buy_phase_links: false, render_stats: false
    } %>

  <% end %>

  <% if !@existing_songs.empty? %>

    <h2>You had already pledged to buy the following songs:</h2>
    <%= render partial: "shared/song_list", object: @existing_songs, locals: {
      campaign: @campaign, render_form: false, render_pledge_phase_links: false, render_buy_phase_links: false, render_stats: false
    } %>

  <% end %>

<% end %>

<p class="pull-right">Return to the <%= link_to @campaign.name, @campaign %> page</p>
